<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="100dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:strokeColor="#8FB818"
        app:strokeWidth="2dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_height="80dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tht_Item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="ItemNAme"
                android:textStyle="bold"
                android:textColor="@color/card"
                android:textSize="20sp"
                android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tht_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="15sp"
                    android:textColor="@color/purple_200"
                    android:textStyle="italic"
                    android:paddingHorizontal="5dp"
                    android:text="GameTime"
                    android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/tht_item_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="00"
                android:textStyle="bold"
                android:textColor="@color/card"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅"
                app:layout_constraintBottom_toBottomOf="@+id/tht_item_true"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/tht_item_true"
                app:layout_constraintStart_toEndOf="@+id/tht_item_true"/>

            <TextView
                android:id="@+id/tht_item_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="00"
                android:textStyle="bold"
                android:textColor="@color/card"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="❎"
                app:layout_constraintBottom_toBottomOf="@+id/tht_item_false"
                app:layout_constraintStart_toEndOf="@+id/tht_item_false"
                app:layout_constraintTop_toTopOf="@+id/tht_item_false" />

            <ImageView
                android:id="@+id/item_medal"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_medal"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tht_item_false"
                app:layout_constraintStart_toEndOf="@+id/tht_Item_name"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>