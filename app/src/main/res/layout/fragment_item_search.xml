<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Itemlar.ItemSearchFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_card_gif"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:strokeColor="@color/purple_200"
        app:strokeWidth="1dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/select_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_search_name"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="80dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/purple_200"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintTop_toBottomOf="@+id/search_card_gif"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/search_name"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#D50000"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:text="@string/app_name"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@+id/card_search_name"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="50dp"
        app:cardElevation="15dp"
        app:strokeColor="@color/purple_200"
        app:strokeWidth="1dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/search_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:layout_margin="13dp"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>